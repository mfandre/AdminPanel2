@using AdminPanel.Helpers.Tables;
@using AdminPanel.Helpers.Widget;

@{
    ViewBag.Title = "Client Side Errors";
}

@{
    Html.CorePanelWidgets("WidgetPrincipal")
        .AddWidget(new Widget("widget1", "Javascript Errors")
                        .AddItem(
                            Html.Table("tableErrors", Url.Action("ReadAll", "ClientSideError"))
                                .AddColumn("ErrorMsg", "Menssagem de Erro")
                                .AddColumn("Url", "Url")
                                .AddColumn("Line", "Linha")
                                .AddColumn("Uri", "Uri")
                                .AddColumn("DataReg", "Data",Type:ColumnType.DateTime)
                                .AddColumn(new DialogColumnItem("DialogScreenshotColumn", "ClientSideJavaScriptExceptionId", "Screenshot", "Screenshot", Url.Action("Screenshot", "ClientSideError"),"Screenshot"))
                                .setScrollXInner(200)
                                )
        ).Render();
}